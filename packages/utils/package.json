{
  "version": "1.4.17",
  "name": "@tmagic/utils",
  "type": "module",
  "main": "dist/tmagic-utils.umd.cjs",
  "module": "dist/tmagic-utils.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/tmagic-utils.js",
      "require": "./dist/tmagic-utils.umd.cjs"
    },
    "./resetcss.css": {
      "import": "./src/resetcss.css",
      "require": "./src/resetcss.css"
    }
  },
  "files": [
    "dist",
    "types",
    "src"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "build": "rimraf ./dist && npm run build:type && vite build --mode=es && vite build --mode=umd",
    "build:type": "npm run clear:type && tsc --declaration --emitDeclarationOnly --project tsconfig.build.json",
    "clear:type": "rimraf ./types",
    "check:type": "tsc --noEmit --project tsconfig.build.json"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tencent/tmagic-editor.git"
  },
  "dependencies": {
    "dayjs": "^1.11.11",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.4",
    "@types/node": "^18.19.0",
    "rimraf": "^3.0.2",
    "vite": "^5.3.5"
  },
  "peerDependencies": {
    "@tmagic/schema": "workspace:*",
    "typescript": "*"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
